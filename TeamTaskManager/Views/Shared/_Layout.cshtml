<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1"/>
    <title>@ViewBag.Title  ASP.NET MVC SPA</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">   
    <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
     @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
</head>
    <body>
        <form>
            <!--[if lt IE 9]><p class="error" style="clear:both;">'Breeze + Angular' requires browser support for defined properties.</p><![endif]-->
            <div id="userSettings">
                @Html.Partial("_UserSettings")
            </div>

            <div id="body">
                @RenderBody()
            </div>

            <footer>

                <p>&copy; @DateTime.Now.Year - @ViewBag.Title</p>
            </footer>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryui")
            @Scripts.Render("~/bundles/ajaxlogin")
            @RenderSection("scripts", required: false)
        </form>
    </body>

</html>